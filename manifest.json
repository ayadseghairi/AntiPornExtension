{
    "manifest_version": 3,
    "name": "Anti-Porn Blocker",
    "version": "1.2",
    "description": "Blocks adult websites automatically",
    "icons": {
      "48": "icon.png"
    },
    "permissions": [
      "declarativeNetRequest",
      "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "declarative_net_request": {
      "rule_resources": [
        {
          "id": "blockPorn",
          "enabled": true,
          "path": "rules.json"
        }
      ]
    },
    "action": {
      "default_popup": "blocked.html"
    }
  }
  